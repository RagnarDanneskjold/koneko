:mod    [ __mod__     ] def

; -- sequences --

; --                                                            ; {{{1
;
; >>> () empty?
; #t
; >>> ( 1 2 ) empty?
; #f
; >>> ( :x :y :z ) len
; 3
;
; >>> ( :one :two :three ) 1 get
; :two
; >>> () 0 get
; *** ERROR: list.get: index error
;
; --                                                            ; }}}1

:empty? [ .empty?   ] def
:len    [ .len      ] def
:get    [ swap !get ] def ; TODO: safe version

; -- lists --

; --                                                            ; {{{1
;
; >>> ( 1 2 3 )
; ( 1 2 3 )
; >>> dup head
; 1
; >>> drop dup tail
; ( 2 3 )
;
; >>> , drop uncons show-stack
; ( 2 3 )
; 1
; >>> cons
; ( 1 2 3 )
;
; >>> () head
; *** ERROR: list.head: empty list
; >>> () tail
; *** ERROR: list.tail: empty list
;
; >>> () head^
; nil
; >>> () tail^
; nil
;
; --                                                            ; }}}1

:head   [ .head   ] def
:tail   [ .tail   ] def

:head^  [ 'head 'empty? ornil ] def
:tail^  [ 'tail 'empty? ornil ] def

:cons   [ !cons   ] def
:uncons [ .uncons ] def

