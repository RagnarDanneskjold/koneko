; -- stack shuffling --

; --                                                            ; {{{1
;
; >>> , 1 2 show-stack
; 2
; 1
; >>> , swap show-stack
; 1
; 2
;
; >>> clear-stack
; >>> 42
; 42
; >>> , dup show-stack
; 42
; 42
;
; >>> clear-stack
; >>> nil
; nil
; >>> drop
; >>> drop
; *** ERROR: stack underflow
;
; >>> , 1 2 'dup dip swap show-stack
; 1
; 2
; 1
;
; >>> clear-stack
; >>> , 1 2 over show-stack
; 1
; 2
; 1
;
; --                                                            ; }}}1

:swap   [ x y . 'y 'x     ] def ; primitive
:dup    [ x   . 'x 'x     ] def
:drop   [ x   .           ] def
:dip    [ x f .  f 'x     ] def
:over   [ x y . 'x 'y 'x  ] def ; [ 'dup dip swap ]

