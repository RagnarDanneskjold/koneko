 :ornil [ nil  ordef  ] def
:2ornil [ nil 2ordef  ] def

 :ordef [ f p? d .  dup p? 'f [  drop 'd ] if ] def
:2ordef [ f p? d . 2dup p? 'f [ 2drop 'd ] if ] def

:times  [ f n . 'n 0 <= [ ] [ f 'f 'n 1 - times ] if ] def

