; -- stack shuffling --

; --                                                            ; {{{1
;
; >>> , 1 2 show-stack
; 2
; 1
; >>> , swap show-stack
; 1
; 2
;
; >>> clear-stack
; >>> 42
; 42
; >>> , dup show-stack
; 42
; 42
;
; >>> clear-stack
; >>> , 1 2 2dup show-stack
; 2
; 1
; 2
; 1
;
; >>> clear-stack
; >>> nil
; nil
; >>> drop
; >>> drop
; *** ERROR: stack underflow
;
; >>> 42 37 2drop
;
; >>> , 42 37 nip show-stack
; 37
;
; >>> clear-stack
; >>> , 1 2 over show-stack
; 1
; 2
; 1
;
; >>> clear-stack
; >>> , 1 2 3 2over show-stack
; 2
; 1
; 3
; 2
; 1
;
; >>> clear-stack
; >>> , 1 2 3 over2 show-stack
; 1
; 3
; 2
; 1
;
; --                                                            ; }}}1

:swap   [ x y . 'y 'x ] def

 :dup   [ x   . 'x 'x       ] def
:2dup   [ x y . 'x 'y 'x 'y ] def             ; [ over over ]

 :drop  [ _   . ] def
:2drop  [ _ _ . ] def                         ; [ drop drop ]

:nip    [ _ y . 'y ] def                      ; [ 'drop dip ]

 :over  [ x y   . 'x 'y 'x        ] def       ; [ 'dup dip swap ]
:2over  [ x y z . 'x 'y 'z 'x 'y  ] def       ; [ over2 over2 ]

:over2  [ x y z . 'x 'y 'z 'x ] def           ; [ 'over dip swap ]

